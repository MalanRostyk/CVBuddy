@model CVBuddy.Models.CVInfo.ExperienceVM

@if (!ViewData.ModelState.IsValid)
{
    <h4 class="text-danger">You need to make some changes:</h4>
    <ul class="text-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>
                @err.ErrorMessage
            </li>
        }
    </ul>
}

<h2>Experience</h2>
<form asp-action="AddExperience" method="post">

    <input type="text" asp-for="@Model.Title" />
    <input type="text" asp-for="@Model.Description" />
    <input type="text" asp-for="@Model.Company" />
    <input type="date" asp-for="@Model.StartDate" />
    <input type="date" asp-for="@Model.EndDate" />

    <button type="submit" class="d-block btn btn-primary">Create Cv</button>
</form>

<form asp-action="AddExperience" method="post">
    <div class="d-flex justify-content-center align-content-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <h3 class="text-center mb-4">Experience</h3>

            <div class="mb-3 form-check">
                <label asp-for="@Model.Title" class="form-label"></label>
                <input type="text" asp-for="@Model.Title" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <label asp-for="@Model.Description" class="form-label"></label>
                <input type="text" asp-for="@Model.Description" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <label asp-for="@Model.Company" class="form-label"></label>
                <input type="text" asp-for="@Model.Company" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <label asp-for="@Model.StartDate" class="form-label"></label>
                <input type="date" asp-for="@Model.StartDate" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <label asp-for="@Model.EndDate" class="form-label"></label>
                <input type="date" asp-for="@Model.EndDate" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Add</button>
        </div>
    </div>
</form>
