@model CVBuddy.Models.CVInfo.PersonalCharacteristicVM

@if (!ViewData.ModelState.IsValid)
{
    <h4 class="text-danger">You need to make some changes:</h4>
    <ul class="text-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>
                @err.ErrorMessage
            </li>
        }
    </ul>
}

<h2>Personal Characteristic</h2>
<form asp-action="AddPersonalCharacteristic" method="post">

    <input type="text" asp-for="@Model.CharacteristicName" />
    <button type="submit" class="d-block btn btn-primary">Add</button>
</form>
