@model Project

<h2>@ViewBag.ProjectCreateHeadline</h2>

<form method="post" asp-Controller="Project" asp-action="CreateProject">

    <p>Enter a title for the project(max 100 characters)</p>
    <input asp-for="Title" type="text" maxlength="100" />

    <p>Describe the project in (max 200 characters)</p>
    <input asp-for="Description" type="text" maxlength="200" />

    <p>When did this project start and end?</p>
    <input asp-for="StartDate" type="date"/> 
    <label> to </label>
    <input asp-for="Enddate" type="date"/>
    <label>- Don't enter a date here to state project as <q>Ongoing/not finished.</q></label>

    <button type="submit" >Create Project</button>
</form>