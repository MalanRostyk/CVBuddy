@model CVBuddy.Models.User

<div class="p-2 d-flex read-banner">
    <div class="pe-2">
        @if (ViewBag.HasOneCv)
        {
            <img src="@Model.OneCv.ImageFilePath" alt="Cv Image" />
        }
    </div>
    <div class="pl-2 d-flex flex-column">
        <h3><i class="fa-solid fa-user"></i> @Model.FirstName @Model.LastName</h3>
        <p><i class="fa-solid fa-globe"></i> @Model.Email</p>
        <p><i class="fa-solid fa-phone"></i> @Model.PhoneNumber</p>

        @if (ViewBag.HasOneAdress)
        {
            <p><i class="fa-solid fa-thumbtack"></i>@Model.OneAddress!.Country, @Model.OneAddress!.City</p>
        }
    </div>
    <div class="d-flex flex-column gap-2 justify-content-center interactions-read-banner">
        <a asp-controller="Cv" asp-action="ReadCv" asp-route-Cid="@Model.OneCv.Cid" class="btn btn-primary btn-sm"><i class="fa-regular fa-address-card me-1"></i>See Cv</a>
        <a asp-controller="Message" asp-action="SendMsg" asp-route-userId="@Model.Id" class="btn btn-outline-light btn-sm"><i class="fa-regular fa-message"></i>Send Message</a>
    </div>
</div>